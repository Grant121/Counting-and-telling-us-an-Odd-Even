using System;

public class Program
{
	public static void Main()
	{
		for (int i = 0; i < 20; i++) // starting the loop, setting i to 0, its telling i to count up to 20, and adding 1 to i
		{
			Console.WriteLine(i + 1); // which is i = 0 + 1
			if ((i + 1) % 2 == 0) // i + 1 is counting to 20 and if it divides by 2 and is no remainder, its even, but if there is a remainder, its odd
			{
				Console.WriteLine("Number is Even");
			}
			else
			{
				Console.WriteLine("Number is Odd");
			}
		}
	}
}
